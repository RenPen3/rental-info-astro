---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Header />

  <main class="chairs-page">
    <div class="chairs-hero">
      <div class="chairs-hero-content">
        <h1>Party Chairs</h1>
        <p>Quality seating solutions for every event</p>
      </div>
    </div>

    <div class="chairs-container">
      <!-- Plastic Chair -->
      <section class="chair-section">
        <div class="chair-content">
          <div class="chair-image">
            <img
              src="https://i.ibb.co/ksVs5wfp/chair-1.webp"
              alt="Plastic Chair"
            />
          </div>
          <div class="chair-details">
            <h2>Basic white folding chair</h2>
            <p class="chair-description">
              Durable and lightweight plastic chairs perfect for outdoor events,
              backyard parties, and casual gatherings. Easy to clean and stack
              for storage.
            </p>

            <div class="chair-specs">
              <h3>Specifications</h3>
              <ul>
                <li><strong>Material:</strong> High-density polyethylene</li>
                <li><strong>Weight Capacity:</strong> 300 lbs</li>
                <li><strong>Dimensions:</strong> 18" W × 20" D × 32" H</li>
                <li><strong>Seat Height:</strong> 18"</li>
                <li><strong>Weight:</strong> 4.5 lbs</li>
                <li><strong>Stackable:</strong> Yes (up to 20 chairs)</li>
              </ul>
            </div>

            <div class="chair-pricing">
              <h3>Pricing</h3>
              <div class="price-options">
                <div class="price-option">
                  <span class="price">$1.00</span>
                  <span class="period">per chair/day</span>
                </div>
                <div class="price-option">
                  <span class="price">$1.50</span>
                  <span class="period">per chair/ new chairs</span>
                </div>
                <!-- <div class="price-option">
                  <span class="price">$35.00</span>
                  <span class="period">per chair/week</span>
                </div> -->
              </div>
            </div>

            <!-- <button class="rent-btn">Rent This Chair</button> -->
          </div>
        </div>
      </section>

      <!-- Folding Chair -->
      <section class="chair-section">
        <div class="chair-content reverse">
          <div class="chair-image">
            <img
              src="https://i.ibb.co/YB3vY7wP/chair-2.webp"
              alt="Folding Chair"
            />
          </div>
          <div class="chair-details">
            <h2>White resin padded <br />folding chair</h2>
            <p class="chair-description">
              Classic folding chairs with padded seats for comfort. Perfect for
              indoor events, meetings, and formal gatherings. Compact when
              folded.
            </p>

            <div class="chair-specs">
              <h3>Specifications</h3>
              <ul>
                <li>
                  <strong>Material:</strong> Wooded frame with padded fabric seat
                </li>
                <li><strong>Weight Capacity:</strong> 250 lbs</li>
                <li><strong>Dimensions:</strong> 20" W × 22" D × 33" H</li>
                <li><strong>Seat Height:</strong> 18.5"</li>
                <li><strong>Weight:</strong> 8 lbs</li>
                <li><strong>Folded Size:</strong> 20" W × 4" D × 33" H</li>
              </ul>
            </div>

            <div class="chair-pricing">
              <h3>Pricing</h3>
              <div class="price-options">
                <div class="price-option">
                  <span class="price">$2.75</span>
                  <span class="period">per chair/day</span>
                </div>
                <!-- <div class="price-option">
                  <span class="price">$25.00</span>
                  <span class="period">per chair/weekend</span>
                </div> -->
                <!-- <div class="price-option">
                  <span class="price">$45.00</span>
                  <span class="period">per chair/week</span>
                </div> -->
              </div>
            </div>

            <!-- <button class="rent-btn">Rent This Chair</button> -->
          </div>
        </div>
      </section>

      <!-- Banquet Chair -->
      <section class="chair-section">
        <div class="chair-content">
          <div class="chair-image">
            <img
              src="https://placehold.co/600x600/4A90E2/FFFFFF?text=Banquet+Chair"
              alt="Banquet Chair"
            />
          </div>
          <div class="chair-details">
            <h2>Banquet Chair</h2>
            <p class="chair-description">
              Elegant banquet chairs with upholstered seats and backs. Ideal for
              weddings, corporate events, and formal celebrations. Available in
              multiple colors.
            </p>

            <div class="chair-specs">
              <h3>Specifications</h3>
              <ul>
                <li>
                  <strong>Material:</strong> Wood frame with upholstered seat/back
                </li>
                <li><strong>Weight Capacity:</strong> 300 lbs</li>
                <li><strong>Dimensions:</strong> 19" W × 21" D × 34" H</li>
                <li><strong>Seat Height:</strong> 18"</li>
                <li><strong>Weight:</strong> 12 lbs</li>
                <li><strong>Colors:</strong> Black, White, Gold, Silver</li>
              </ul>
            </div>

            <div class="chair-pricing">
              <h3>Pricing</h3>
              <div class="price-options">
                <div class="price-option">
                  <span class="price">$6.00</span>
                  <span class="period">per chair/day</span>
                </div>
                <div class="price-option">
                  <span class="price">$35.00</span>
                  <span class="period">per chair/weekend</span>
                </div>
                <div class="price-option">
                  <span class="price">$60.00</span>
                  <span class="period">per chair/week</span>
                </div>
              </div>
            </div>

            <button class="rent-btn">Rent This Chair</button>
          </div>
        </div>
      </section>

      <!-- Chiavari Chair -->
      <section class="chair-section">
        <div class="chair-content reverse">
          <div class="chair-image">
            <img
              src="https://placehold.co/600x600/4A90E2/FFFFFF?text=Chiavari+Chair"
              alt="Chiavari Chair"
            />
          </div>
          <div class="chair-details">
            <h2>Chiavari Chair</h2>
            <p class="chair-description">
              Premium Chiavari chairs with elegant design and comfortable
              padding. Perfect for upscale events, luxury weddings, and high-end
              celebrations.
            </p>

            <div class="chair-specs">
              <h3>Specifications</h3>
              <ul>
                <li>
                  <strong>Material:</strong> Aluminum frame with padded seat
                </li>
                <li><strong>Weight Capacity:</strong> 350 lbs</li>
                <li><strong>Dimensions:</strong> 18" W × 20" D × 35" H</li>
                <li><strong>Seat Height:</strong> 18.5"</li>
                <li><strong>Weight:</strong> 9 lbs</li>
                <li><strong>Colors:</strong> Gold, Silver, Black, White</li>
              </ul>
            </div>

            <div class="chair-pricing">
              <h3>Pricing</h3>
              <div class="price-options">
                <div class="price-option">
                  <span class="price">$8.00</span>
                  <span class="period">per chair/day</span>
                </div>
                <div class="price-option">
                  <span class="price">$45.00</span>
                  <span class="period">per chair/weekend</span>
                </div>
                <div class="price-option">
                  <span class="price">$75.00</span>
                  <span class="period">per chair/week</span>
                </div>
              </div>
            </div>

            <button class="rent-btn">Rent This Chair</button>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .chairs-page {
    min-height: 100vh;
  }

  .chairs-hero {
    background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
    color: white;
    padding: 6rem 0;
    text-align: center;
  }

  .chairs-hero-content h1 {
    font-family: "Lora", serif;
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .chairs-hero-content p {
    font-family: "Poppins", sans-serif;
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .chairs-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .chair-section {
    margin-bottom: 6rem;
  }

  .chair-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .chair-content.reverse {
    direction: rtl;
  }

  .chair-content.reverse > * {
    direction: ltr;
  }

  .chair-image {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .chair-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .chair-details h2 {
    font-family: "Lora", serif;
    font-size: 2.5rem;
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  .chair-description {
    font-family: "Poppins", sans-serif;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #6c757d;
    margin-bottom: 2rem;
  }

  .chair-specs {
    margin-bottom: 2rem;
  }

  .chair-specs h3 {
    font-family: "Poppins", sans-serif;
    font-size: 1.3rem;
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  .chair-specs ul {
    list-style: none;
    padding: 0;
  }

  .chair-specs li {
    font-family: "Poppins", sans-serif;
    padding: 0.5rem 0;
    border-bottom: 1px solid #e9ecef;
    color: #495057;
  }

  .chair-specs li:last-child {
    border-bottom: none;
  }

  .chair-pricing h3 {
    font-family: "Poppins", sans-serif;
    font-size: 1.3rem;
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  .price-options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .price-option {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #4a90e2;
  }

  .price {
    font-family: "Poppins", sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #4a90e2;
  }

  .period {
    font-family: "Poppins", sans-serif;
    font-size: 0.9rem;
    color: #6c757d;
  }

  .rent-btn {
    background: #4a90e2;
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-family: "Poppins", sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }

  .rent-btn:hover {
    background: #357abd;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(74, 144, 226, 0.3);
  }

  @media (max-width: 768px) {
    .chair-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .chair-content.reverse {
      direction: ltr;
    }

    .chairs-hero-content h1 {
      font-size: 2.5rem;
    }

    .chair-details h2 {
      font-size: 2rem;
    }

    .price-option {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
  }
</style>
