<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #ffffff;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    background-image: linear-gradient(
        135deg,
        rgba(102, 126, 234, 0.9) 0%,
        rgba(118, 75, 162, 0.9) 100%
      ),
      url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 800"><defs><pattern id="party-pattern" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.08)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.06)"/><rect x="60" y="60" width="8" height="8" fill="rgba(255,255,255,0.05)"/><rect x="10" y="50" width="6" height="6" fill="rgba(255,255,255,0.04)"/></pattern></defs><rect width="100%" height="100%" fill="url(%23party-pattern)"/></svg>');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
    text-align: center;
    color: white;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-text {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-headline {
    color: #000000;
    font-family: "Lora", serif;
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1.5rem 0;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 1s ease-out;
  }

  .hero-subheadline {
    color: #000000;
    font-family: "Poppins", sans-serif;
    font-size: 1.4rem;
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 3rem 0;
    opacity: 0.95;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    animation: fadeInUp 1s ease-out 0.2s both;
  }

  .hero-cta {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 1s ease-out 0.4s both;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-family: "Poppins", sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }

  .cta-button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s ease;
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-primary {
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    color: white;
    border: 2px solid #ff6b6b;
  }

  .cta-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 107, 107, 0.4);
    border-color: #ff5252;
  }

  .cta-secondary {
    background: rgba(255, 255, 255, 0.15);
    /* color: white; */
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }

  .cta-secondary:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .cta-icon {
    font-size: 1.2rem;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.2));
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive Design */

  /* Huge Monitors (1920px and above) */
  @media (min-width: 1920px) {
    .hero-headline {
      font-size: 4.5rem;
    }

    .hero-subheadline {
      font-size: 1.6rem;
    }

    .cta-button {
      padding: 1.25rem 2.5rem;
      font-size: 1.2rem;
    }
  }

  /* Normal Laptops (1024px - 1919px) */
  @media (max-width: 1919px) and (min-width: 1024px) {
    .hero-headline {
      font-size: 3.5rem;
    }

    .hero-subheadline {
      font-size: 1.4rem;
    }
  }

  /* Tablets (768px - 1023px) */
  @media (max-width: 1023px) and (min-width: 768px) {
    .hero-headline {
      font-size: 2.8rem;
    }

    .hero-subheadline {
      font-size: 1.2rem;
    }

    .hero-cta {
      gap: 1rem;
    }

    .cta-button {
      padding: 0.9rem 1.8rem;
      font-size: 1rem;
    }
  }

  /* Mobile (up to 767px) */
  @media (max-width: 767px) {
    .hero {
      min-height: 80vh;
      padding: 2rem 0;
    }

    .hero-container {
      padding: 0 1rem;
    }

    .hero-headline {
      font-size: 2.2rem;
      margin-bottom: 1rem;
    }

    .hero-subheadline {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .hero-cta {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .cta-button {
      width: 100%;
      max-width: 280px;
      justify-content: center;
      padding: 1rem 1.5rem;
      font-size: 1rem;
    }

    .hero-background {
      background-attachment: scroll;
    }
  }

  /* Small Mobile (up to 480px) */
  @media (max-width: 480px) {
    .hero-headline {
      font-size: 1.8rem;
    }

    .hero-subheadline {
      font-size: 0.9rem;
    }

    .cta-button {
      padding: 0.8rem 1.2rem;
      font-size: 0.9rem;
    }

    .cta-icon {
      font-size: 1rem;
    }
  }
</style>
