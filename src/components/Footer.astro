<style>
  .footer {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: white;
    padding: 4rem 0 0 0;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Main Footer Content */
  .footer-main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  /* Business Info Section */
  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .logo-img {
    width: 40px;
    height: 40px;
    filter: brightness(0) invert(1);
  }

  .logo-text {
    font-family: "Poppins", sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .footer-description {
    font-family: "Poppins", sans-serif;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #bdc3c7;
    margin: 0 0 1.5rem 0;
  }

  .service-area {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: "Poppins", sans-serif;
    font-size: 0.9rem;
    color: #ecf0f1;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1rem;
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .service-icon {
    font-size: 1.1rem;
  }

  /* Footer Titles */
  .footer-title {
    font-family: "Lora", serif;
    font-size: 1.3rem;
    font-weight: 600;
    color: white;
    margin: 0 0 1.5rem 0;
    position: relative;
  }

  .footer-title::after {
    content: "";
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 1px;
  }

  /* Footer Links */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-link {
    font-family: "Poppins", sans-serif;
    font-size: 0.95rem;
    color: #bdc3c7;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    padding-left: 0;
  }

  .footer-link::before {
    content: "‚Üí";
    position: absolute;
    left: -1rem;
    opacity: 0;
    transition: all 0.3s ease;
    color: #667eea;
  }

  .footer-link:hover {
    color: white;
    padding-left: 1rem;
  }

  .footer-link:hover::before {
    opacity: 1;
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .contact-icon {
    font-size: 1.2rem;
    margin-top: 0.1rem;
    flex-shrink: 0;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .contact-label {
    font-family: "Poppins", sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    color: #95a5a6;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .contact-link {
    font-family: "Poppins", sans-serif;
    font-size: 0.95rem;
    color: #ecf0f1;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: #667eea;
  }

  .contact-text {
    font-family: "Poppins", sans-serif;
    font-size: 0.95rem;
    color: #ecf0f1;
    line-height: 1.4;
  }

  /* Social Media Section */
  .footer-social {
    text-align: center;
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 2rem;
  }

  .social-title {
    font-family: "Lora", serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: white;
    margin: 0 0 1.5rem 0;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .social-link:hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
  }

  .social-icon {
    font-size: 1.5rem;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  /* Bottom Footer */
  .footer-bottom {
    background: rgba(0, 0, 0, 0.2);
    padding: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    font-family: "Poppins", sans-serif;
    font-size: 0.9rem;
    color: #95a5a6;
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .bottom-link {
    font-family: "Poppins", sans-serif;
    font-size: 0.85rem;
    color: #bdc3c7;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .bottom-link:hover {
    color: #667eea;
  }

  /* Responsive Design */

  /* Huge Monitors (1920px and above) */
  @media (min-width: 1920px) {
    .footer-container {
      max-width: 1400px;
    }

    .footer-main {
      grid-template-columns: repeat(4, 1fr);
      gap: 4rem;
    }

    .logo-text {
      font-size: 1.7rem;
    }

    .footer-title {
      font-size: 1.4rem;
    }
  }

  /* Normal Laptops (1024px - 1919px) */
  @media (max-width: 1919px) and (min-width: 1024px) {
    .footer-main {
      grid-template-columns: repeat(4, 1fr);
      gap: 3rem;
    }
  }

  /* Tablets (768px - 1023px) */
  @media (max-width: 1023px) and (min-width: 768px) {
    .footer {
      padding: 3rem 0 0 0;
    }

    .footer-main {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }

  /* Mobile (up to 767px) */
  @media (max-width: 767px) {
    .footer {
      padding: 2.5rem 0 0 0;
    }

    .footer-container {
      padding: 0 1rem;
    }

    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .logo-text {
      font-size: 1.3rem;
    }

    .footer-title {
      font-size: 1.2rem;
    }

    .social-links {
      gap: 1rem;
    }

    .social-link {
      width: 45px;
      height: 45px;
    }

    .social-icon {
      font-size: 1.3rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .footer-bottom-links {
      justify-content: center;
      gap: 1.5rem;
    }
  }

  /* Small Mobile (up to 480px) */
  @media (max-width: 480px) {
    .footer {
      padding: 2rem 0 0 0;
    }

    .logo-img {
      width: 35px;
      height: 35px;
    }

    .logo-text {
      font-size: 1.2rem;
    }

    .footer-description {
      font-size: 0.9rem;
    }

    .service-area {
      font-size: 0.85rem;
      padding: 0.6rem 0.8rem;
    }

    .footer-title {
      font-size: 1.1rem;
    }

    .footer-link {
      font-size: 0.9rem;
    }

    .contact-link,
    .contact-text {
      font-size: 0.9rem;
    }

    .social-link {
      width: 40px;
      height: 40px;
    }

    .social-icon {
      font-size: 1.2rem;
    }

    .copyright {
      font-size: 0.8rem;
    }

    .bottom-link {
      font-size: 0.8rem;
    }

    .footer-bottom-links {
      gap: 1rem;
    }
  }
</style>
