  .cta-buttons-container {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: center;
  }

  .cta-button-gradient {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: #fafafa;
    color: #667eea;
    padding: 1rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-family: "Poppins", sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .cta-button-gradient:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  }

  .cta-button-outline {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: transparent;
    color: #fafafa;
    padding: 1rem 2rem;
    border: 2px solid #fafafa;
    border-radius: 25px;
    text-decoration: none;
    font-family: "Poppins", sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .cta-button-outline:hover {
    background: #667eea;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
  }

  .chair-content {
    margin-bottom: 5em;
  }

  .chair-content:nth-child(even) {
    direction: rtl;
    text-align: left;
  }

  .price-options:nth-child(even) {
    direction: ltr;
  }

  .chair-details {
    margin-bottom: 4em;
