<section class="testimonials">
  <div class="testimonials-container">
    <h2 class="testimonials-title">{heading}</h2>
    <p class="testimonials-subtitle">{subTitle}</p>

    <div class="testimonials-grid">
      {
        profiles.map((profile) => (
          <div class="testimonial-card">
            <div class="quote">{profile.quote}</div>
            <div class="profile">
              <img
                src={profile.imageURL}
                alt={profile.alt}
                class="profile-img"
              />
              <div class="profile-info">
                <div class="name">{profile.name}</div>
                <div class="title">{profile.occupation}</div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .testimonials {
    padding: 6rem 0;
    background: #ffffff;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .testimonials-title {
    font-family: "Lora", serif;
    font-size: 2.5rem;
    color: #2c3e50;
    text-align: center;
    margin-bottom: 1rem;
